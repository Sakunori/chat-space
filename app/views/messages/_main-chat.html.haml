.main-chat

  .main-chat__group-info
    .main-chat__group-info__test
      = @group.name
      .main-chat__group-info__test__member
        = 'Member :'
        - @group.users.each do |user|
          = user.name
    .main-chat__group-info__edit-icon
      = link_to "Edit", edit_group_path(@group.id), class: "text"

  .MessageFeild
    = render @messages

  .main-chat__message-form
    = form_with model: [@group, @message], html: {class: "main-chat__message-form"}, local: true do |f|
      .main-chat__message-form__input
        .main-chat__message-form__input__comment
          = f.text_field :content, class: 'main-chat__message-form__input__comment__text', placeholder: 'type a message'
          = f.label :image, class: 'main-chat__message-form__input__comment__img-btn' do
            = icon('far', 'image')
            = f.file_field :image, class: 'main-chat__message-form__input__comment__img-btn__file'
        = f.submit 'Send', class: 'main-chat__message-form__input__send-btn'