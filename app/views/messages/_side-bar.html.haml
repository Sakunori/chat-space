.side-bar
  .user-name
    .user-name__area
      .user-name__area__name
        = current_user.name
      .user-name__area__icon
        = link_to new_group_path, class: "icon-btn-edit" do
          = icon('far', 'edit', class: "icon-btn")
          %span<>
        = link_to edit_user_path(current_user), class: "icon-btn-cog" do
          = icon('fas', 'cog', class: "icon-btn")
          %span<>
  .group-list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group), class: "link-group" do
          .group-list__name
            = group.name
          .group-list__name__message
            = group.show_last_message